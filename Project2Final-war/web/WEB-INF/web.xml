<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>registerCustomer</servlet-name>
        <servlet-class>servlets.customer.registerCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginCustomer</servlet-name>
        <servlet-class>servlets.customer.loginCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchProduct</servlet-name>
        <servlet-class>servlets.product.searchProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchByID</servlet-name>
        <servlet-class>servlets.product.searchByID</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listAllProducts</servlet-name>
        <servlet-class>servlets.product.listAllProducts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createProduct</servlet-name>
        <servlet-class>servlets.product.createProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>servlets.product.deleteProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateQty</servlet-name>
        <servlet-class>servlets.product.updateQty</servlet-class>
    </servlet>
    <servlet>
