    </servlet>
    <servlet>
        <servlet-name>productDisplayPage</servlet-name>
        <servlet-class>servlets.product.productDisplayPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>servlets.customer.Authentication</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerCustomer</servlet-name>
        <url-pattern>/registerCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginCustomer</servlet-name>
        <url-pattern>/loginCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchProduct</servlet-name>
        <url-pattern>/searchProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchByID</servlet-name>
        <url-pattern>/searchByID</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listAllProducts</servlet-name>
        <url-pattern>/listAllProducts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createProduct</servlet-name>
        <url-pattern>/createProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateQty</servlet-name>
        <url-pattern>/updateQty</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shoppingCart</servlet-name>
        <url-pattern>/shoppingCart</url-pattern>
