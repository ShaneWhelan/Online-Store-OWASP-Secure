    </servlet>
    <servlet>
        <servlet-name>aLogin</servlet-name>
        <servlet-class>servlets.admin.aLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlets.customer.logout</servlet-class>
    </servlet>
    <servlet>
